@{
    ViewBag.Title = "Color Choser";
}
<h2>Let's play with colors</h2>

@using (Html.BeginForm("Color", "Home", FormMethod.Post))
{

<h6>Please use the hexidecimal form (#FFFAFA)</h6>
    <div>
        @Html.Label("firstcolor", "First Color: ")
        @Html.TextBox("FirstColor", null, htmlAttributes: new { type = "text", pattern = "#[0-9a-fA-F]{3,6}", required = "required" })
    </div>

    <div>
        @Html.Label("secondcolor", "Second Color: ")
        @Html.TextBox("SecondColor", null, htmlAttributes: new { type = "text", pattern = "#[0-9a-fA-F]{3,6}", required = "required" })
    </div>
    <br />
    <input type="submit" value="Create Color" />
    <br />
}

@if (ViewBag.ColorResult)
{
    <div class="row">
        <div class="col-sm-7" style="@ViewBag.Color1"></div>
        <div class="col-sm-7" style="width:50px; height: 50px;"><h2> + </h2></div>
        <div class="col-sm-7" style="@ViewBag.Color2"></div>
        <div class="col-sm-7" style="width:50px; height: 50px;"><h2> = </h2></div>
        <div class="col-sm-7" style="@ViewBag.MixedColors"></div>
   </div>
}

